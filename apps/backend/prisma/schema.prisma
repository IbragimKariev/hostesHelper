// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Зал ресторана
model Hall {
  id          String   @id @default(uuid())
  name        String
  width       Float
  height      Float
  pixelRatio  Float    @default(50)
  sections    Json     @default("[]") // Section[]
  walls       Json     @default("[]") // Wall[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tables       Table[]
  reservations Reservation[]

  @@map("halls")
}

// Столик
model Table {
  id                 String   @id @default(uuid())
  number             Int
  seats              Int
  shape              String   // 'rectangle' | 'circle' | 'oval'
  positionX          Float
  positionY          Float
  sizeWidth          Float
  sizeHeight         Float
  status             String   @default("available") // 'available' | 'occupied' | 'reserved' | 'cleaning'
  section            String?
  rotation           Float    @default(0)
  seatConfiguration  String?
  hallId             String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  hall         Hall          @relation(fields: [hallId], references: [id], onDelete: Cascade)
  reservations Reservation[]

  @@unique([hallId, number])
  @@map("tables")
}

// Бронирование
model Reservation {
  id              String   @id @default(uuid())
  tableId         String
  tableNumber     Int
  hallId          String
  customerName    String
  customerPhone   String
  guests          Int
  date            DateTime
  time            String
  duration        Float
  status          String   @default("pending") // 'confirmed' | 'pending' | 'cancelled' | 'completed'
  specialRequests String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  table Table @relation(fields: [tableId], references: [id], onDelete: Cascade)
  hall  Hall  @relation(fields: [hallId], references: [id], onDelete: Cascade)

  @@index([date])
  @@index([hallId])
  @@index([status])
  @@map("reservations")
}

// Роль пользователя
model Role {
  id        String   @id @default(uuid())
  name      String   @unique // 'admin' | 'hostess'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users User[]

  @@map("roles")
}

// Пользователь
model User {
  id        String   @id @default(uuid())
  name      String
  login     String   @unique
  password  String
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role Role @relation(fields: [roleId], references: [id], onDelete: Restrict)

  @@index([login])
  @@map("users")
}

// Стоп-лист (блюда, которых сегодня нет)
model StopListItem {
  id          String   @id @default(uuid())
  name        String   // Название блюда
  reason      String?  // Причина (закончилось, нет ингредиентов и т.д.)
  category    String?  // Категория (Салаты, Супы, Горячее и т.д.)
  date        DateTime @default(now()) // Дата добавления в стоп-лист
  isActive    Boolean  @default(true)  // Активен ли стоп-лист
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
  @@index([isActive])
  @@map("stop_list_items")
}

// Блюдо дня
model DishOfDay {
  id          String   @id @default(uuid())
  name        String   // Название блюда
  description String?  // Описание
  price       Float?   // Цена (опционально)
  category    String?  // Категория
  date        DateTime @default(now()) // Дата
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
  @@index([isActive])
  @@map("dishes_of_day")
}

// Правила для сотрудников
model StaffRule {
  id          String   @id @default(uuid())
  title       String   // Заголовок правила
  content     String   // Содержание правила
  priority    Int      @default(0) // Приоритет отображения (чем выше, тем важнее)
  category    String?  // Категория (Общие, Безопасность, Обслуживание и т.д.)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
  @@index([priority])
  @@map("staff_rules")
}
